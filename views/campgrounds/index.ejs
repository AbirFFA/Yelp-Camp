<% include ../partials/header %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>This is campground page</h1>
            <a class="btn btn-primary btn-large" href="/campgrounds/new">Add new Campground</a>
        </div>
    </header>

    <div class="row text-center" style="display: flex; flex-wrap: wrap;">
        <% campgrounds.forEach(function(campgrounds) { %>
        <div class="col-md-3 col-sm-6">
            <div class="card">
                <img src="<%= campgrounds.image %>" class="card-img-top">
                <div class="card-body">
                    <h5 class="card-title"><%= campgrounds.name %></h5>
                </div>
                <p>
                    <a href="/campgrounds/<%=campgrounds._id%>" class="btn btn-primary btn-sm">More Info</a>
                </p>
            </div>
        </div>
        <% }); %>
    </div>
</div>

<% include ../partials/footer %>